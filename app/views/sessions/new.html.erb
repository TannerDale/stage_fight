<h1>Sign In</h1>

<%= form_with url: login_path do |f| %>
  <div class="form-floating mb-3">
    <%= f.text_field :email, class: "form-control", id: "floatingInput1", placeholder: 'Email' %>
    <%= f.label :email, for: "floatingInput1" %>
  </div>
  <div class="form-floating mb-3">
    <%= f.password_field :password, class: "form-control", id: "floatingInput1", placeholder: 'Password' %>
    <%= f.label :password, for: "floatingInput1" %>
  </div>

  <%= f.submit 'Log In', class: 'btn btn-outline-success btn-sm' %>
<% end %>
